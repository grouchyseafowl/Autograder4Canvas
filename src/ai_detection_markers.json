      "list_generation_patterns": {
        "description": "AI tendency to structure as lists",
        "confidence": "medium",
        "detection_level": "naive",
        "markers": [
          {
            "name": "numbered_lists_overuse",
            "description": "Excessive use of numbered lists in prose assignments",
            "flag_message": "Excessive numbered list usage"
          },
          {
            "name": "bullet_point_prose",
            "description": "Prose that reads like expanded bullet points",
            "flag_message": "Writing has bullet-point structure in prose form"
          },
          {
            "name": "exactly_n_points",
            "description": "Consistently exactly 3, 5, or 7 points",
            "flag_message": "Suspiciously consistent point counts"
          }
        ]
      },

      "knowledge_cutoff_indicators": {
        "description": "References suggesting AI knowledge limitations",
        "confidence": "high",
        "detection_level": "all_levels",
        "markers": [
          {
            "name": "vague_recent_references",
            "description": "Vague references to recent events",
            "examples": ["in recent years", "recently", "in the modern era"],
            "flag_message": "Vague temporal references instead of specific dates"
          },
          {
            "name": "outdated_information",
            "description": "Information that's out of date",
            "flag_message": "Contains outdated information"
          },
          {
            "name": "hedged_current_events",
            "description": "Overly cautious statements about current events",
            "flag_message": "Unusually hedged statements about recent events"
          }
        ]
      }
    },

    "assignment_type_specific": {
      "description": "Markers that apply differently based on assignment type",

      "personal_reflection": {
        "required_authenticity_markers": [
          "first_person_pronouns",
          "specific_personal_examples",
          "emotional_language",
          "temporal_specificity",
          "sensory_details"
        ],
        "high_suspicion_if_absent": true,
        "notes": "Reflections should be highly personal; AI struggles with authentic personal voice"
      },

      "analytical_essay": {
        "suspicious_patterns": [
          "perfect_paragraph_structure",
          "excessive_transitions",
          "false_balance",
          "no_original_argument"
        ],
        "notes": "Should have a clear thesis and original analysis, not just summary"
      },

      "research_paper": {
        "suspicious_patterns": [
          "vague_citations",
          "no_specific_quotes",
          "sources_dont_exist",
          "misattributed_quotes"
        ],
        "notes": "AI often fabricates or misattributes sources"
      },

      "discussion_post": {
        "suspicious_patterns": [
          "no_reference_to_classmates",
          "no_reference_to_specific_readings",
          "generic_agreement",
          "no_questions"
        ],
        "notes": "Should engage with specific class content and peers"
      },

      "creative_writing": {
        "suspicious_patterns": [
          "cliche_descriptions",
          "no_unique_voice",
          "predictable_plot",
          "generic_characters"
        ],
        "notes": "AI creative writing often feels generic and predictable"
      }
    }
  },

  "detection_strategies": {
    "naive_user_detection": {
      "description": "Student copies AI output directly with no modifications",
      "difficulty": "easy",
      "primary_markers": [
        "ai_transition_phrases",
        "hedge_phrases",
        "perfect_paragraph_structure",
        "complete_sentence_ratio",
        "absence_of_personal_voice",
        "chatgpt_specific_phrases"
      ],
      "confidence_threshold": "2+ strong markers"
    },

    "intermediate_user_detection": {
      "description": "Student makes light edits to AI output",
      "difficulty": "medium",
      "primary_markers": [
        "structural_perfection_despite_surface_edits",
        "voice_inconsistency",
        "vocabulary_sophistication_mismatch",
        "copy_paste_indicators",
        "missing_specific_details"
      ],
      "confidence_threshold": "3+ markers with pattern consistency"
    },

    "advanced_user_detection": {
      "description": "Student prompts AI to write like a student or include errors",
      "difficulty": "hard",
      "primary_markers": [
        "artificial_error_patterns",
        "performative_informality",
        "fake_struggle_narrative",
        "error_distribution_analysis",
        "cross_submission_inconsistency"
      ],
      "confidence_threshold": "Pattern analysis across multiple dimensions",
      "notes": "Requires holistic analysis; no single marker is definitive"
    },

    "very_advanced_user_detection": {
      "description": "Student heavily rewrites AI output or uses AI for brainstorming only",
      "difficulty": "very_hard",
      "primary_markers": [
        "cross_assignment_vocabulary_analysis",
        "sudden_skill_jumps",
        "writing_fingerprint_comparison",
        "temporal_consistency_analysis"
      ],
      "confidence_threshold": "Longitudinal analysis required",
      "notes": "May produce false negatives; focus on clear cases"
    }
  },

  "scoring_weights": {
    "description": "Relative weights for different marker categories",
    "copy_paste_indicators": 1.5,
    "ai_specific_phrases": 1.2,
    "structural_perfection": 1.0,
    "missing_authenticity": 1.3,
    "artificial_errors": 1.4,
    "cross_submission_similarity": 2.0,
    "voice_inconsistency": 1.1
  },

  "false_positive_considerations": {
    "description": "Factors that might cause false positives",
    "high_achieving_students": {
      "notes": "Strong writers may naturally have polished prose",
      "mitigation": "Compare against student's historical work"
    },
    "esl_students": {
      "notes": "May use translation tools legitimately or have learned formal phrases",
      "mitigation": "Consider consistent voice despite formal language"
    },
    "students_with_writing_support": {
      "notes": "Writing center or tutor assistance is legitimate",
      "mitigation": "Look for complete voice change vs. guided improvement"
    },
    "neurodivergent_students": {
      "notes": "May have very consistent or very inconsistent patterns naturally",
      "mitigation": "Establish baseline from multiple submissions"
    }
  },

  "implementation_notes": {
    "regex_patterns": {
      "word_boundary": "\\b{word}\\b",
      "case_insensitive": true,
      "multiline": true
    },
    "thresholds": {
      "review_recommended": "3+ low-confidence flags OR 1+ high-confidence flag",
      "high_suspicion": "5+ flags across categories OR 2+ high-confidence flags",
      "definite_review": "Cross-student similarity OR metadata mismatch"
    },
    "output_format": {
      "flag_levels": ["info", "warning", "alert"],
      "include_evidence": true,
      "include_suggestions": true
    }
  }
}
